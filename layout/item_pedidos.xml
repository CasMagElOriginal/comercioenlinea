<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/keyline_2"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedorPedidos"
        android:layout_width="match_parent"
        android:background="@drawable/gradiente_rc_producto"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtFechaPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/gradiente_textview"
            android:padding="@dimen/keyline_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDireccionP" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtProductosPedidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradiente_textview"
            android:padding="@dimen/keyline_1"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtCantidadSolicitada"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDireccionP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradiente_textview"
            android:padding="@dimen/keyline_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtprProducto" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtCantidadSolicitada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradiente_textview"
            android:padding="@dimen/keyline_1"
            android:textStyle="bold"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtProductosPedidos"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtprProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradiente_textview"
            android:padding="@dimen/keyline_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtProductosPedidos" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>